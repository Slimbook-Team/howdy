#!/usr/bin/make -f

%:
	dh $@
	
override_dh_auto_configure:
	mkdir -p build
	meson setup build
	meson configure build --prefix=/usr -Dinstall_pam_config=true -Dpam_dir=/usr/lib/security/howdy -Dconfig_dir=/etc/howdy -Ddlib_data_dir=/usr/share/dlib -Duser_models_dir=/usr/share/dlib -Dpy_sources_dir=/usr/lib

override_dh_auto_build:
	ninja -C build
	cp build/howdy/src/pam-config build/howdy/src/pam/howdy

#override_dh_install:
	# nothing #
